  class: class_names("group whitespace-nowrap flex pt-2 pb-4 px-1 border-b-2 font-medium text-sm", {"border-indigo-500 text-indigo-600": active?}, {"border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-200": !active?}),
  data: data,
  aria: {current: aria_current} do
  = title
